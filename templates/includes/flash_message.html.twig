        <article class="message is-{{ type }} has-text-centered flash-msg">
            <div class="message-header">
                <p>{{ type }}</p>
                <button class="delete" aria-label="delete" onclick="this.parentElement.parentElement.removeChild(this.parentElement);" ></button>
            </div>
            <div class="message-body">
                {{ message }}
            </div>
        </article>
    {% endfor %}
{% endfor %}